<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    tools:context="TopicsActivities.PrimePage">


            <View
                android:id="@+id/top_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/bg_view"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:gravity="left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/setting_icon"
                    android:paddingTop="10dp"
                    android:layout_width="50dp"
                    android:layout_height="34dp"
                    android:background="@drawable/man_icon"
                    android:backgroundTint="#685B5B"/>
                <TextView
                    android:layout_marginStart="5dp"
                    android:typeface="serif"
                    android:textColor="#FFFFFF"
                    android:id="@+id/textNameTopicsAc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textSize="23dp"
                    android:shadowDx="8"
                    android:shadowDy="6"/>
            </LinearLayout>

            <TextView
                android:typeface="serif"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PrimePage"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:shadowColor="@color/black"
                android:shadowDx="8"
                android:shadowDy="6"
                android:shadowRadius="6"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="4"
                android:columnCount="2"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="-80dp"
                android:layout_below="@+id/top_view">

                <androidx.cardview.widget.CardView
                    android:layout_margin="12dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="12dp"
                    android:layout_columnWeight="1"
                    android:layout_row="1"
                    android:layout_column="0">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/mathIV"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/math_icon"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mathematics"
                            android:layout_gravity="center_horizontal"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#132A42"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_margin="12dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="12dp"
                    android:layout_columnWeight="1"
                    android:layout_row="1"
                    android:layout_column="1">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/csIV"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/cs_icon"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Computer Science"
                            android:layout_gravity="center_horizontal"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#132A42"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_margin="12dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="12dp"
                    android:layout_columnWeight="1"
                    android:layout_row="2"
                    android:layout_column="0">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/chemistryIV"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/chemistry_icon"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chemistry"
                            android:layout_gravity="center_horizontal"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#132A42"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_margin="12dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="12dp"
                    android:layout_columnWeight="1"
                    android:layout_row="2"
                    android:layout_column="1">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/biologyIV"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/biology_icon"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Biology"
                            android:layout_gravity="center_horizontal"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#132A42"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_margin="12dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="12dp"
                    android:layout_columnWeight="1"
                    android:layout_row="3"
                    android:layout_column="0">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/physicsIV"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/physics_icon"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Physics"
                            android:layout_gravity="center_horizontal"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#132A42"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_margin="12dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="12dp"
                    android:layout_columnWeight="1"
                    android:layout_row="3"
                    android:layout_column="1">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/languagesIV"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/languages_icon"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Languages"
                            android:layout_gravity="center_horizontal"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#132A42"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>

<!--implement from build gradle version 1.2.0 // version 1.3.1 __ without com.etebarian __> difficult to change icon sizes!-->
    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:id="@+id/meow_bottom_navigation"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mbn_circleColor="#ECE990"
        app:mbn_backgroundBottomColor="#B5B14C"
        app:mbn_countBackgroundColor="#E4A97B"
        app:mbn_countTextColor="#ffffff"
        app:mbn_defaultIconColor="#C8D2D6"
        app:mbn_rippleColor="#8AB35B"
        app:labelVisibilityMode="labeled"
        app:mbn_selectedIconColor="#49559A"
        app:mbn_shadowColor="#1f212121"
        />





</RelativeLayout>