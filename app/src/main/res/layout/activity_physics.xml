<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="TopicsActivities.PhysicsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/bg_view"
        android:backgroundTint="#BAA808"
        android:layout_height="90dp" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:gravity="left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/setting_icon"
            android:paddingTop="10dp"
            android:layout_width="50dp"
            android:layout_height="34dp"
            android:background="@drawable/man_icon"
            android:backgroundTint="#685B5B"/>
        <TextView
            android:layout_marginStart="5dp"
            android:typeface="serif"
            android:textColor="#270202"
            android:id="@+id/textNamePhysicsAc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="23dp"
            android:shadowDx="8"
            android:shadowDy="6"/>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:typeface="serif"
            android:textColor="#FBFBFB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Physics Category"
            android:textSize="23dp"
            android:shadowDx="8"
            android:shadowDy="6"/>

    </LinearLayout>

    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:id="@+id/meow_bottom_navigation"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mbn_circleColor="#ECE990"
        app:mbn_backgroundBottomColor="#B5B14C"
        app:mbn_countBackgroundColor="#E4A97B"
        app:mbn_countTextColor="#ffffff"
        app:mbn_defaultIconColor="#C8D2D6"
        app:mbn_rippleColor="#8AB35B"
        app:labelVisibilityMode="labeled"
        app:mbn_selectedIconColor="#49559A"
        app:mbn_shadowColor="#1f212121"
        />

</RelativeLayout>