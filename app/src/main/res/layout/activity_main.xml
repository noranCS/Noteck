<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbg_signup_in"
    android:padding="15dp"
    android:id="@+id/main"
    android:gravity="start"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/round"
        android:text="Languages"
        android:textColor="@color/white"
        app:backgroundTint="#6d5778" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

                <TextView
                    android:layout_marginStart="1dp"
                    android:id="@+id/noteck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginVertical="15dp"
                    android:rotationY="11"
                    android:text="Noteck"
                    android:textColor="#71759a"
                    android:textSize="60dp"
                    android:textStyle="italic"
                    android:typeface="serif" />
        <TextView
            android:layout_marginStart="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="15dp"
            android:rotationY="11"
            android:text="Noteck"
            android:textColor="#ffdfda"
            android:textSize="58dp"
            android:textStyle="italic"
            android:typeface="serif" />

    </FrameLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/signUpFirstBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:background="@drawable/round"
                android:padding="7dp"
                android:text="Sign up"
                android:layout_gravity="left"
                android:textColor="#121D59"
                android:typeface="serif"
                android:textSize="40dp"
                app:backgroundTint="#ddd3d6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right">

            <Button
                android:layout_gravity="bottom"
                android:padding="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round"
                android:text="Already Have An Account"
                android:id="@+id/logInFirstBtn"
                android:textSize="20dp"
                android:typeface="serif"
                android:textColor="#121D59"
                app:backgroundTint="#ddd3d6" />
        </LinearLayout>

        </LinearLayout>



</LinearLayout>